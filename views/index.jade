extends layout

block content
  div(class="top")#header
    table#nav  
      td: h1 Pixel Prodigy
      td: a(class="a1",href="") Feedback 
      td: a(class="a1",href="") Contact 
      td: a(class="a1",href="") Technical Info
    div(class="right")
      a(id="login1",class="a1",href="") Log In
  div#one
    h1(style='margin-bottom:-15px') Photo Editors
    p Advanced Photo Editing software that is browser-based. Edit your photos for free, anywhere & anytime.
    br
    div(id="signupBox")
       h2 Sign Up to gain access to photo Libraries, Multiple Photo Edits, and Additional Presets!
         form(name='signup',action='/signup',method='post')
             div(data-role='fieldcontain')
               fieldset(data-role='controlgroup')
                label(for='username') User Name: 
                input(name='username',type='text',value='',placeholder='')
             div(data-role='fieldcontain')
               fieldset(data-role='controlgroup')
                label(for='password') Password: 
                input(name='password',type='password',value='',placeholder='')
             div(data-role='fieldcontain')
               fieldset(data-role='controlgroup')
                label(for='email') Email: 
                input(name='email',type='text',value='',placeholder='@')
             div(data-role='fieldcontain')   
                input(type='submit',value='submit',data-transition='fade', data-theme='c')
    a(href=""): div(id="simpleEditor",class="editor")
      h2 Simple Editor
    a(href="/completeEditor"): div(id="completeEditor",class="editor")
      h2 Complete Editor
    h1(style='margin-bottom:-15px') Specialized Editing Tools
    p Editing Workflow Tools for beginner photo editors
    br
    a(href=""): div(id="carTools",class="editor")
      h2 Car Photography Tools
    a(href=""): div(id="glamourTools",class="editor")
      h2 Glamour Photography Tools
    h1(style='margin-bottom:-15px') Walkthroughs
    p See how to edit and manage your photos with Pixel Prodigy
    br
  div#two
  